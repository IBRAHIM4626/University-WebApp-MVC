@using MVC_Day2.ViewModels
@model AddInstructorWithDeptListAnd_CourseListViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
@* <form asp-controller="Course" asp-action="SaveEdit" asp-route-id="@Model.Id"> *@
<form action="/Instructor/SaveEdit/@Model.Id" method="post">
    <div>
        <label>Name</label>
        <input class="form form-control" name="Name" value="@Model?.Name" id="Name" />
    </div>
    <div>
        <label>ImageUrl</label>
        <input class="form form-control" name="ImageUrl" value="@Model?.ImageUrl" id="ImageUrl" />
    </div>
    <div>
        <label>Salary</label>
        <input class="form form-control" name="Salary" value="@Model?.Salary" id="Salary" type="number"/>
    </div>
    <div>
        <label>Address</label>
        <input class="form form-control" name="Address" value="@Model?.Address" id="Address" />
    </div>
    <div>
        <label>Department Name</label>
@*         <input class="form form-control" name="DepartmentId" value="@Model.DepartmentId" id="DepartmentId" />
 *@        <select class="form form-control" name="DepartmentId">
            @foreach (var deptItem in Model?.DeptList)
            {
                if(Model.DepartmentId == deptItem.Id)
                {
                    <option value="@deptItem?.Id" selected>@deptItem?.Name</option>
                }
                else
                {
                    <option value="@deptItem?.Id">@deptItem?.Name</option>
                }
            }
        </select>
    </div>
    <div>
        <label>Course Name</label>
              <select class="form form-control" name="CrsId">
            @foreach (var crsItem in Model?.CourseList)
            {
                <option value="@crsItem?.Id">@crsItem?.Name</option>
            }
        </select>
    </div>
    <br />
    <input type="submit" value="Save" class="btn btn-success" />
</form>

<a href="/Instructor/Index">Back To List</a>